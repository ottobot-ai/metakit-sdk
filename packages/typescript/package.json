{
  "name": "@constellation-network/metagraph-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Constellation Metagraph operations",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "format": "prettier --write src tests",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "constellation",
    "metagraph",
    "dag",
    "ecdsa",
    "secp256k1",
    "signature",
    "blockchain",
    "rfc8785",
    "canonicalize"
  ],
  "author": "Constellation Network",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Constellation-Labs/metakit-sdk.git",
    "directory": "packages/typescript"
  },
  "bugs": {
    "url": "https://github.com/Constellation-Labs/metakit-sdk/issues"
  },
  "homepage": "https://github.com/Constellation-Labs/metakit-sdk/tree/main/packages/typescript#readme",
  "dependencies": {
    "@stardust-collective/dag4": "^2.6.0",
    "canonicalize": "^2.1.0",
    "elliptic": "^6.5.4",
    "js-sha256": "^0.11.1",
    "js-sha512": "^0.9.0"
  },
  "devDependencies": {
    "@types/elliptic": "^6.4.18",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@stardust-collective/dag4": "^2.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
